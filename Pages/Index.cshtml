@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Never lose a contact again! Add your phone book and save contacts to your phone book. </p>
</div>
<form method="post">
    <section class="">
        <div class="dashboard">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-md-12">
                        <h3>Your Phone Books</h3>
                    </div>
                </div>
                @foreach (var phoneBook in Model.AllPhoneBooks)
                {
                    <button asp-page-handler="FetchPhoneBookContact" asp-route-phoneBookId="@phoneBook.PhoneBookID" class="btn_green mt-0" type="submit">
                        @phoneBook.PhoneBookName
                    </button>
                }
                <div class="content_box pb-5">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            @if (Model.SelectedPhoneBook != null)
                            {
                                <h3>@Model.SelectedPhoneBook.PhoneBookName - Entries</h3>
                            }
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="row mt-3">
                                <div class="col-8 col-md-8">
                                    <input id="searchInput" asp-for="@Model.SearchString" type="text" name="" placeholder="Enter your search value here" class="form-control">
                                </div>
                                <div class="col-4 col-md-4">
                                    <button asp-page-handler="Search" class="btn_green mt-0" type="submit" style=" padding: 0.50rem 1.25rem;">SEARCH</button>
                                </div>
                                @*@Model.searchString*@
                            </div>
                        </div>
                    </div>
                    <div class="table_wrap" style="border: 0;">
                        <table class="table table2"  id="entryTable">
                            <thead>
                                <tr>
                                    <th style="background: #CCDCD1;">Name</th>
                                    <th style="background: #CCDCD1;">Number</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ if (Model.AllPhoneBookEntries != null)
                                    {
                                        if (Model.AllPhoneBookEntries.Count > 0)
                                        {
                                            foreach (var entry in Model.AllPhoneBookEntries)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="customer_flex">
                                                            <div class="text">@entry.EntryName</div>
                                                        </div>
                                                    </td>
                                                    <td class="black">
                                                        <b>@entry.EntryNumber</b>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td>
                                                    <div class="customer_flex">
                                                        <div class="text">No entries found for the phone book. <a href="/AddEntry">Click here to add an entry</a></div>
                                                    </div>
                                                </td>
                                                <td class="black"></td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
