@page 
@model PhoneBook.Pages.AddPhoneBookModel
@{
    ViewData["Title"] = "Add Phone Book";
}
<div class="text-center">
    <h1 class="display-4">Add a Phone Book</h1>
    <p>You can add multiple phone books go ahead and create a phone book.</p>
</div>
<section>
    <div class="dashboard">
        <div class="container-fluid">
            <div class="content_box profile_wrap mt-0 p-0">
                <form method="post" class="appointment_wrap">
                    <div class="row">
                        <div class="col-12 col-md-12">
                            <h4>Phone Book Name</h4>
                            <input type="text" asp-for="phoneBookName" class="form-control">                           
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-4">
                            <button class="btn_green mt-0" type="submit">ADD PHONE BOOK</button>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(Model.errorMessage))
                        {
                            <p>Model.errorMessage</p>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>